<div class="row">
   <div class="col-md-8">
       <div class="media">
         <div class="media-body">
             <p><%= comment.body %><br/>
             <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
             <strong>submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %></strong></p>
         </div>
       </div>
   </div>
</div>