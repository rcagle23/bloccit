<div class="row">
   <div class="col-md-8">
       <div class="media">
         <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
            <div class="media-body">
                <p><%= comment.body %><br/>
                <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
                   <strong>submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %> <% if policy(comment).destroy? %>
                   | <%= link_to "Delete", [comment.post, comment], method: :delete %>
               <% end %></strong></p>
            </div>
         <% end %>
       </div>
   </div>
</div>