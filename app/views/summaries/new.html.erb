<h1>New Summary</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for post summaries</p>
        <ul>
            <li>Don't duplicate content.</li>
            <li>Be precise.</li>
            <li>Be nice.</li>
        </ul>
    </div>
    
    <div class="col-md-8">
      <%= form_for [@topic, @post, @summary] do |f| %>
       <div class="form-group">
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter summary" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
    </div>
</div>